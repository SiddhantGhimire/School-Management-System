@model schoolmanagementsystem.Models.ViewModels.UpdateStudentViewModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Update Student";
}

<h2 class="my-4">Update Student</h2>

<div class="container">
    @using (Html.BeginForm("UpdateStudent", "Student", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.StudentId)

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Name</label>
                <input type="text" class="form-control custom-input" placeholder="Enter Name" name="Name" value="@Model.Name" required>
                <div class="invalid-feedback">Please enter a valid name.</div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Picture URL</label>
                <input type="text" class="form-control custom-input" placeholder="Enter Picture URL" name="Picture" value="@Model.Picture" required>
                <div class="invalid-feedback">Please enter a valid picture URL.</div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Address</label>
                <textarea class="form-control custom-input" rows="3" placeholder="Enter Address" name="Address" required>@Model.Address</textarea>
                <div class="invalid-feedback">Please enter a valid address.</div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Phone Number</label>
                <input type="text" class="form-control custom-input" placeholder="Enter Phone Number" name="PhoneNumber" value="@Model.PhoneNumber" required>
                <div class="invalid-feedback">Please enter a valid phone number.</div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary btn-lg">Update Student</button>
            </div>
        </div>
    }
</div>

<style>
    .custom-input {
        border: 2px solid #007bff;
    }

        .custom-input:focus {
            border-color: #0056b3;
            box-shadow: none;
        }
</style>
