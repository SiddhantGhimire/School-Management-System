@model schoolmanagementsystem.Models.ViewModels.StudentListViewModel;

<style>
    /* Custom styles */
    .student-card {
        border: 1px solid #ccc;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

        .student-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .student-img {
        height: 200px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
    }

    .student-info {
        padding: 20px;
    }

    .student-name {
        font-size: 20px;
        font-weight: bold;
        color: #333;
    }

    .student-address {
        font-size: 16px;
        color: #666;
        margin-top: 10px;
    }

    .btn-edit,
    .btn-delete {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-edit:hover,
        .btn-delete:hover {
            background-color: #0056b3;
        }
</style>

<div class="container mt-3">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">All Students</h2>
                <a href="@Url.Action("AddStudent", "Student")" class="btn btn-primary">Add Student</a>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var student in Model.Students)
        {
            <div class="col mb-4">
                <div class="card h-100 shadow-sm student-card">
                    <img src="@student.Picture" class="card-img-top student-img" alt="@student.Name">
                    <div class="card-body student-info">
                        <h5 class="card-title student-name">@student.Name</h5>
                        <p class="card-text student-address">@student.Address</p>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("UpdateStudent", "Student", new { id = student.StudentId })" class="btn btn-edit">Edit</a>
                            <a href="@Url.Action("DeleteStudent", "Student", new { id = student.StudentId })" class="btn btn-delete">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
